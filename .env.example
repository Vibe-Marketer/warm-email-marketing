# Agentic Workflows Environment Variables
# Copy this to .env and fill in your values

# =============================================================================
# AI/LLM APIs (at least one required)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...

# =============================================================================
# Google Services (optional)
# =============================================================================
# Place credentials.json in project root for OAuth
# token.json will be generated on first auth

# Or use service account:
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# =============================================================================
# Workflow-Specific APIs (add as needed)
# =============================================================================
# Add API keys here as your workflows require them
# Examples:
# APIFY_API_TOKEN=...          # Web scraping
# REPLICATE_API_TOKEN=...      # AI image/video generation
# SENDGRID_API_KEY=...         # Email
# STRIPE_API_KEY=...           # Payments
# YOUR_SERVICE_API_KEY=...     # Whatever you need

# =============================================================================
# Cost Tracking (optional)
# =============================================================================
# Set to "true" to log all API costs
DOE_COST_TRACKING=true

# Alert threshold (will warn when single action exceeds this)
DOE_COST_ALERT_THRESHOLD=1.00
