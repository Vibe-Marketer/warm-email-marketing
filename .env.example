# Warm Email Marketing - Environment Variables
# VERSION: 2026.01.06
#
# Copy this file to .env and fill in your actual values

# =============================================================================
# CLOUDFLARE (for tunnel and DNS)
# =============================================================================
# Get these from your Cloudflare dashboard
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here
CLOUDFLARE_BASE_DOMAIN=yourdomain.com
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# =============================================================================
# RESEND (for email delivery)
# =============================================================================
# Get this from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# =============================================================================
# LISTMONK (email marketing platform)
# =============================================================================
LISTMONK_ADMIN_USER=admin
LISTMONK_ADMIN_PASSWORD=change_this_secure_password
LISTMONK_API_KEY=generate_a_random_32_char_key_here
LISTMONK_URL=https://email.yourdomain.com

# Database (used by Listmonk)
POSTGRES_USER=listmonk
POSTGRES_PASSWORD=change_this_db_password
POSTGRES_DB=listmonk

# =============================================================================
# TUNNEL CONFIGURATION
# =============================================================================
# Created when you set up your Cloudflare tunnel
CLOUDFLARE_TUNNEL_ID=your_tunnel_id_here
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here
